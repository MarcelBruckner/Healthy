// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Food {
  id          String   @id @default(cuid())
  datetime    DateTime
  ort         String
  motivation  String
  speisen     String
  scharf      Int
  getraenke   String
  beschwerden String
  anmerkungen String
}

model Toilet {
  id          String   @id @default(cuid())
  datetime    DateTime
  urinmenge   Int
  urindruck   Int
  stuhltyp    Int
  stuhlfarbe  Int
  stuhlmenge  Int
  stuhldruck  Int
  therapie    String
  anmerkungen String
}
