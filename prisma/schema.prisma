// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Food {
  id          String   @id @default(cuid())
  datetime    DateTime
  ort         String
  motivation  String
  speisen     String
  getraenke   String
  beschwerden String
  anmerkungen String
}

model Poop {
  id             String   @id @default(cuid())
  datetime       DateTime
  stuhltyp       Int
  stuhlverhalten String
  therapie       String
}
